rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Shops can only access their own data
    match /shops/{shopId} {
      allow read, write: if request.auth != null && request.auth.uid == shopId;
    }
    
    // Orders belong to shops
    match /orders/{orderId} {
      allow read: if request.auth != null && 
        resource.data.shopId == request.auth.uid;
      allow write: if request.auth != null && 
        request.resource.data.shopId == request.auth.uid;
    }
    
    // Interventions are read-only logs
    match /interventions/{interventionId} {
      allow read: if request.auth != null && 
        resource.data.shopId == request.auth.uid;
      allow create: if request.auth != null;
    }
    
    // API keys (encrypted)
    match /apiKeys/{keyId} {
      allow read: if false; // Never readable
      allow write: if request.auth != null && 
        request.auth.token.admin == true;
    }
  }
}
